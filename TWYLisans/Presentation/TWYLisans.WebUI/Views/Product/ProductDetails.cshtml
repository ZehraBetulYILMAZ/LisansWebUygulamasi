@model VM_List_Product
<div class="row">
    <div class="col-md-2">
     
    </div>
    <div class="col-md-8 ">
    <main role="main" class="pb-3">
        <div class="container border rounded-1   w-100 mh-100 MyContainer" style="height: 30rem; margin-top:50px;">
                <div class="row" style="margin:40px;">
                @if (Model != null)
                {
                    <form class="d-flex justify-content-center" asp-controller="Product" asp-action="ProductUpdate" method="post">
                        <div class="row w-100 ">
                            <!--satır başlangıcı -->
                            <p class="myP">Ürün Adı:</p>
                            <div class="col-5">
                                <h6>@Model.productName</h6>
                            </div>
                            <div class="col-4">
                                <div class="row text-start">
                                    <div class="col-md-2">
                                        <a data-toggle="collapse" class="myA" href="#collapse0">
                                            <i class="indicator fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                 
                                </div>
                            </div>
                                <div class="col-md-12">
                                    <div id="collapse0" class="panel-collapse collapse in">
                                        <span class="text ">
                                            <label>
                                                <input type="text" asp-for="productName">
                                            </label>
                                        </span>
                                    </div>
                                </div>
                            <!--satır başlangıcı -->
                            <p class="myP">Açıklama :</p>
                            <div class="col-5">
                                    <h6>@Model.productDescription</h6>
                            </div>
                            <div class="col-6">
                                <div class="row text-start">
                                    <div class="col-md-2">
                                        <a data-toggle="collapse" class="myA" href="#collapse1">
                                            <i class="indicator fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                    
                                </div>
                            </div>
                                <div class="col-md-9">
                                    <div id="collapse1" class="panel-collapse collapse in">
                                        <span class="text">
                                            <label>
                                                <textarea asp-for="productDescription"></textarea>
                                            </label>
                                        </span>
                                    </div>
                                </div>
                            <!--satır başlangıcı -->
                            <p class="myP">Category:</p>
                            <div class="col-5">
                                <h6>@Model.categoryName</h6>
                            </div>
                            <div class="col-4">
                                    <div class="col-6">
                                        <div class="row text-start">
                                            <div class="col-md-2">
                                                <a data-toggle="collapse" class="myA" href="#collapse2">
                                                    <i class="indicator fa fa-pencil-square-o" aria-hidden="true"></i>
                                                </a>
                                            </div>
                                         
                                        </div>
                                    </div>
                            </div>
                                <div class="col-md-12">
                                    <div id="collapse2" class="panel-collapse collapse in">
                                        <span class="text">
                                            <label>
                                                @if (Model.categories != null && Model.categories.Count > 0)
                                                {
                                                    <select class="form-select" asp-for="@Model.categoryId" aria-label="Default select example">
                                                        <option selected>Ürün Seçiniz</option>
                                                        @foreach (var category in Model.categories)
                                                        {
                                                            <option value="@category.ID">@category.categoryName</option>
                                                            
                                                        }
                                                    </select>
                                                }
                                                else
                                                {
                                                    <select class="form-select" aria-label="Disabled select example" disabled>
                                                        <option selected>Please add category</option>
                                                    </select>
                                                }
                                            </label>
                                        </span>
                                    </div>
                                </div>
                               <input type="hidden" asp-for="ID">
                            <button type="submit" class="btn btn-dark m-2 w-100">Güncelle</button>

                        </div>
                    </form>
                }
                </div>
            </div>
        </main>
    </div>
  <div class="col-md-2"></div>
</div>