@model List<VM_List_Product>
<div class="row">
    <div class="col-md-2">
       
    </div>
    <div class="col-md-8">
        <main role="main" class="pb-3">

            <div class="container-md border border  rounded-1 p-2 m-4 w-100 mh-100 MyContainer" style="height: 35rem;">
                <div class="container  DivWithScroll">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Ürün Adı</th>
                                <th scope="col">Lisans</th>
                                <th scope="col">Müşteri</th>
                                <th scope="col">Aksiyon</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var product in @Model)
                                {
                                    <tr>
                                        <td>@product.name</td>
                                        @if (product.licence != null)
                                        {
                                            <td>@product.licence.licenceKey</td>
                                        }
                                        else
                                        {
                                            <td>00000000-0000-0000-0000-000000000000</td>
                                        }
                                        <td>@product.customer.firstName @product.customer.lastName</td>
                                        <td>
                                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                                <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@product.ID" class="btn BtnDuzenle btn-sm">Düzenle</a>                      
                                                <a asp-controller="Product" asp-action="ProductDetails" class="btn BtnSil btn-sm">Sil</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
    <div class="col-md-2"></div>
</div>