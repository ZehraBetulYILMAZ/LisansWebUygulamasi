@model VM_Details_Customer

<div class="row">
    <div class="col-md-2">
        <partial name="~/Views/Customer/partial/kategori.cshtml" />
    </div>
    <div class="col-md-9">
        <main role="main" class="pb-3">
            <div class="container border rounded-1 p-2 m-3 w-100 mh-100 MyContainer" style="height: 35rem;">
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="UpdateCustomer" asp-controller="Customer" method="post">
                            @if (Model != null)
                            {
                                <!--satır başlangıcı -->
                                <p class="myP">Ad:</p>
                                <div class="row w-100 ">
                                    <div class="col-4">
                                        <h6>@Model.customer.firstName</h6>
                                    </div>
                                    <div class="col-4">
                                        <div class="row text-start">
                                            <div class="col-md-2">
                                                <a data-toggle="collapse" class="myA" href="#collapse0">
                                                    <i class="indicator fa fa-pencil-square-o" aria-hidden="true"></i>
                                                </a>
                                            </div>
                                            <div class="col-md-2">
                                                <div id="collapse0" class="panel-collapse collapse in">
                                                    <span class="text">
                                                        <label>
                                                            <input type="text" asp-for="customer.firstName">
                                                        </label>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <p class="myP">Soyad :</p>
                                        <div class="col-4">
                                        <h6>@Model.customer.lastName</h6>
                                        </div>
                                        <div class="col-4">
                                            <div class="row text-start">
                                                <div class="col-md-2">
                                                    <a data-toggle="collapse" class="myA" href="#collapse10">
                                                        <i class="indicator fa fa-pencil-square-o" aria-hidden="true"></i>
                                                    </a>
                                                </div>
                                                <div class="col-md-2">
                                                    <div id="collapse10" class="panel-collapse collapse in">
                                                        <span class="text">
                                                            <label>
                                                            <input type="text" asp-for="customer.lastName">
                                                            </label>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <!--satır başlangıcı -->
                                    <p class="myP">Eposta :</p>
                                    <div class="col-5">
                                        <h6>@Model.customer.ePosta</h6>
                                    </div>
                                    <div class="col-3">
                                        <div class="row text-start">
                                            <div class="col-md-2">
                                                <a data-toggle="collapse" class="myA" href="#collapse1">
                                                    <i class="indicator fa fa-pencil-square-o" aria-hidden="true"></i>
                                                </a>
                                            </div>
                                            <div class="col-md-2">
                                                <div id="collapse1" class="panel-collapse collapse in">
                                                    <span class="text">
                                                        <label>
                                                            <input type="text" asp-for="customer.ePosta">
                                                        </label>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--satır başlangıcı -->
                                    <p class="myP">Telefon No:</p>
                                    <div class="col-4">
                                        <h6>@Model.customer.phoneNumber</h6>
                                    </div>
                                    <div class="col-4">
                                        <div class="row text-start">
                                            <div class="col-md-2">
                                                <a data-toggle="collapse" class="myA" href="#collapse2">
                                                    <i class="indicator fa fa-pencil-square-o" aria-hidden="true"></i>
                                                </a>
                                            </div>
                                            <div class="col-md-2">
                                                <div id="collapse2" class="panel-collapse collapse in">
                                                    <span class="text">
                                                        <label>
                                                            <input type="text" asp-for="customer.phoneNumber">
                                                        </label>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--satır başlangıcı -->
                                    <p class="myP">Şehir :</p>
                                    <div class="col-4">
                                        <h6>@Model.customer.city</h6>
                                    </div>
                                    <div class="col-4">
                                        <div class="row text-start">
                                            <div class="col-md-2">
                                                <a data-toggle="collapse" class="myA" href="#collapse3">
                                                    <i class="indicator fa fa-pencil-square-o" aria-hidden="true"></i>
                                                </a>
                                            </div>
                                            <div class="col-md-2">
                                                <div id="collapse3" class="panel-collapse collapse in">
                                                    <span class="text">
                                                        <label>
                                                            <input type="text" asp-for="customer.city">
                                                        </label>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--satır başlangıcı -->
                                    <p class="myP">İlçe :</p>
                                    <div class="col-4">
                                        <h6>@Model.customer.town</h6>
                                    </div>
                                    <div class="col-4">
                                        <div class="row text-start">
                                            <div class="col-md-2">
                                                <a data-toggle="collapse" class="myA" href="#collapse4">
                                                    <i class="indicator fa fa-pencil-square-o" aria-hidden="true"></i>
                                                </a>
                                            </div>
                                            <div class="col-md-2">
                                                <div id="collapse4" class="panel-collapse collapse in">
                                                    <span class="text">
                                                        <label>
                                                            <input type="text" asp-for="customer.town">
                                                        </label>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--satır başlangıcı -->
                                    <p class="myP">Cinsiyet :</p>
                                    <div class="col-4">
                                        @if (Model.customer.gender)
                                        {
                                            <h6>Kadın</h6>
                                        }
                                        else
                                        {
                                            <h6>Erkek</h6>
                                        }
                                    </div>
                                    <div class="col-4">
                                        <div class="row text-start">
                                            <div class="col-md-2">
                                                <a data-toggle="collapse" class="myA" href="#collapse5">
                                                    <i class="indicator fa fa-pencil-square-o" aria-hidden="true"></i>
                                                </a>
                                            </div>
                                            <div class="col-md-2">
                                                <div id="collapse5" class="panel-collapse collapse in">
                                                    <span class="text">
                                                        <label>
                                                            <input type="text">
                                                        </label>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="hidden" asp-for="customer.ID"/>
                                    <button type="submit" class="btn btn-dark m-2">Güncelle</button>
                                </div>
                            }
                        </form>
                        <a asp-controller="Product" asp-action="CreateProduct" asp-route-id="@Model.customer.ID"  class="btn btn-outline-dark w-100 ">Ürün Ekle</a>
                    </div>

                    <div class="col-md-6">
                        
                        <div class="DivWithScroll" style="background-color:#889293;">
                            <h2 class="text-center m-1" style="color:#B7C1C3;"> Ürünler</h2>
                            <table class="table table-striped table-borderless ">
                                <thead>
                                    <tr>
                                        <th scope="col">Ürün Adı</th>
                                        <th scope="col">Aksiyon</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.products != null)
                                    {
                                        foreach (var product in Model.products)
                                        {
                                            <tr>
                                                <td>@product.name</td>
                                                <td>
                                                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                                        <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@product.ID" class="btn BtnDuzenle btn-sm">Detay</a>
                                                        <a asp-controller="Product" asp-action="ListProduct"  class="btn BtnSil btn-sm">Sil</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>